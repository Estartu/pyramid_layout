        ${panel('popper.actions_menu')}
        <header>
            <h1>Community Listing</h1>
        </header>

        <div class="contentText">

            ${panel('popper.grid_header', letters=letters, filters=filters)}

            <table class="filtered sortable" id="someid" summary="">
