<metal:company_menu define-macro="search">
<div data-quickpanel="quickpanel" class="topNavIconWrapper">
    <h2 id="search-toggle" class="quickpanel-toggle ir">Search</h2>

    <form action="#" class="quickpanel">
        <label for="searchfor">
            Search for:
            <select name="searchfor" id="searchfor">
                <option value="searchfor_all_content">all content</option>
                <option value="searchfor_documents">documents</option>
                <option value="searchfor_news">news</option>
            </select>
        </label>
        <label for="searchwhere">
            in
            <select name="searchwhere" id="searchwhere">
                <option value="search_all">all KARL</option>
                <option value="search_this_section">this community</option>
            </select>
        </label>
        <fieldset>
            <div class="searchInputWrapper">
                <input id="search-site-box"
                       class="float-left" type="search"
                       name="SearchTextBox"
                       title="Search this site"
                       accesskey="4" size="15"
                       placeholder="What to search for?"/>
                <button class="searchButton ir" type="submit">Search</button>
            </div>
        </fieldset>
    </form>
</div>
</metal:company_menu>
