<ul class="alphabet">
    <tal:block repeat="letter letters">
        <!-- The current letter. -->
        <li tal:condition="letter['is_current']" class="current">
            <span>${letter['name']}</span>
        </li>

        <!-- Not the current letter, may or may not have link. -->
        <li tal:condition="not letter['is_current']" class="notcurrent">
            <a href="${letter['href']}" tal:omit-tag="not letter['href']">${letter['name']}</a>
        </li>
    </tal:block>
</ul>
