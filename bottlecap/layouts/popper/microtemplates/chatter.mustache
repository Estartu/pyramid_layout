<div id="chatter-panel">
    <div class="pushdownContent clearfix">
        <div id="on-your-mind">
            <h3>On your mind...</h3>
            <form class="form-stacked" href="#" id="send-message">
                <div class="control-group clearfix">
                    <div class="controls">
                        <textarea id="mywords" name="mywords"></textarea>
                        <p class="help-block tips">Tips: Use @username, #tag, and #this for this page</p>
                    </div>
                </div>
                <div class="actions">
                    <div class="btn-group">
                        <button type="submit" class="btn btn-large btn-primary">Speak</button>
                        <a class="btn btn-primary btn-large dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                        <div class="dropdown-menu">
                            <div class="contentPadding">
                                <fieldset>
                                    <b>To:</b>
                                    <label>
                                        <input name="chatter-option-to"
                                               type="radio" value="allkarl"
                                               checked="checked"/>
                                        All KARL
                                    </label>
                                    <label>
                                        <input name="chatter-option-to"
                                               type="radio" value="staff" />
                                        Staff
                                    </label>
                                    <label>
                                        <input name="chatter-option-to"
                                               type="radio" value="users" />
                                        Users
                                    </label>
                                </fieldset>
                                <div>
                                    <b>Attachments:</b>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <a class="chatter-options-link" href="#" style="float: right; margin-right: 60px; margin-top: 4px;">Options</a> -->
                    <!-- <div class="chatter-options-panel">
                        <div>
                            <span style="margin-right: 16px">To:</span>
                            <input name="chatter-option-to" type="radio" value="allkarl" checked="checked"/>
                            <span style="margin-right: 8px;">All KARL</span>
                            <input name="chatter-option-to" type="radio" value="staff" />
                            <span style="margin-right: 8px;">Staff</span>
                            <input name="chatter-option-to" type="radio" value="users" />
                            <span style="border: 1px solid; padding: 0 4px; margin-right: 8px;">users</span>
                        </div>
                        <div style="margin-top: 8px;">
                            Attachments:
                        </div>
                    </div> -->
                </div>
            </form>
        </div>
        {{#streams}}
        <div id="{{class}}">
            <h3>{{title}}</h3>
            <div class="stream-items">
                {{#items}}
                <div class="stream-item clearfix">
                    <div class="stream-content">
                        <a href="{{author_profile_url}}">
                            <img alt="{{author}}" src="{{image_url}}"
                                 class="avatar" />
                            <strong class="fullname">{{author}}</strong>
                        </a>
                        <div>
                            <a href="{{message_url}}" class="messagetext">
                                {{text}}
                            </a>
                        </div>
                    </div>
                    <div class="stream-footer clearfix">
                        <a href="{{message_url}}" class="more">More&hellip;</a>
                        <small class="timestamp">{{info}}</small>
                    </div>
                </div>
                {{/items}}
            </div>
        </div>
        {{/streams}}
    </div>
</div>
