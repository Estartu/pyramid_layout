<div id="radar-panel">
    <div class="pushdownContent clearfix">
        <div id="{{class}}" class="panel">
            <h3>Radar</h3>
            <ul id="sections" class="nav nav-list">
                <li class="active"><a href="#">Home <span class="messageCounter">3</span></a></li>
                <li><a href="#">Approvals</a></li>
                <li><a href="#">Topics <span class="messageCounter">4</span></a></li>
                <li><a href="#">Featured</a></li>
                <li><a href="#">Apps</a></li>
                <li><a href="#">Configure</a></li>
            </ul>
        </div>

        {{#communities}}
            <div id="{{id}}" class="panel">
                <h3>{{title}}</h3>
                <ul class="noBullets">
                    {{#items}}
                    <li>
                        <a href="#"><h4>{{title}}</h4></a>
                        <ul>
                            {{#tools}}
                            <li><a class="panel-item-tools" href="{{url}}">{{title}}</a></li>
                            {{/tools}}
                        </ul>
                    </li>
                    {{/items}}
                </ul>
            </div>
        {{/communities}}

        {{#activity}}
            <div id="{{id   }}" class="panel">
                <h3>{{title}}</h3>
                <ul class="noBullets">
                    {{#items}}                    
                    <li>
                        <a href="#">
                            <h4>{{title}}</h4>
                            <small>
                                {{type}}, <cite>{{path}}</cite>
                                <time datetime="{{modificationDate}}">{{modificationDateReadable}}</time>
                            </small>
                        </a>
                    </li>
                    {{/items}}
                </ul>
            </div>
        {{/activity}}
    </div>
</div>